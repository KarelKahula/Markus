  <div class="notice">
    <%=t('past_due_date_warning')%>
  </div>
<% end %>

<%= javascript_include_tag "create_assignment" %>

<div id="title_bar"><h1><%= t("assignment.edit") %> <%= h(@assignment.short_identifier) %></h1>
</div>
<% if flash[:fail_notice] && !flash[:fail_notice].empty? %>
  <div class="notice">
    <%=flash[:fail_notice]%>
  </div>
<% end %>
<%= render :partial => 'form' %>
